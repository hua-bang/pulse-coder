{
  "name": "pulse-coder",
  "version": "1.0.0",
  "description": "Plugin-based AI coding assistant - Pulse Coder",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.28.0",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "test": "pnpm -r test",
    "start": "pnpm --filter pulse-coder-cli start",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}