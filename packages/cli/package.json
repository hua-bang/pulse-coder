{
  "name": "pulse-coder-cli",
  "version": "0.0.1-alpha.16",
  "description": "CLI interface for Pulse Coder",
  "type": "commonjs",
  "main": "./dist/index.cjs",
  "bin": {
    "pulse-coder": "./dist/index.cjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "start": "node --enable-source-maps dist/index.cjs",
    "start:debug": "PULSE_CODER_DEBUG=1 tsup && node --inspect --enable-source-maps dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "pulse-coder-engine": "workspace:*",
    "pulse-coder-memory-plugin": "workspace:*",
    "pulse-sandbox": "workspace:*"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "tsup": "^8.0.0",
    "vitest": "^1.0.0",
    "@types/node": "^25.0.10"
  }
}
